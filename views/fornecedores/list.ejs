<%- include('../partials/header') %>

    <div class="container mt-4">
        <h1>Lista de Fornecedores</h1>

        <% if (messages.success) { %>
            <div class="alert alert-success">
                <%= messages.success %>
            </div>
            <% } %>
                <% if (messages.error) { %>
                    <div class="alert alert-danger">
                        <%= messages.error %>
                    </div>
                    <% } %>

                        <a href="/fornecedores/novo" class="btn btn-primary mb-3">Novo Fornecedor</a>

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>CNPJ</th>
                                    <th>Telefone</th>
                                    <th>Email</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% fornecedores.forEach(fornecedor=> { %>
                                    <tr>
                                        <td>
                                            <%= fornecedor.id %>
                                        </td>
                                        <td>
                                            <%= fornecedor.nome %>
                                        </td>
                                        <td>
                                            <%= fornecedor.cnpj %>
                                        </td>
                                        <td>
                                            <%= fornecedor.telefone %>
                                        </td>
                                        <td>
                                            <%= fornecedor.email %>
                                        </td>
                                        <td>
                                            <a href="/fornecedores/editar/<%= fornecedor.id %>"
                                                class="btn btn-sm btn-warning">Editar</a>
                                            <form action="/fornecedores/excluir/<%= fornecedor.id %>" method="POST"
                                                style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Tem certeza que deseja excluir?')">Excluir</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
    </div>

    <%- include('../partials/footer') %>